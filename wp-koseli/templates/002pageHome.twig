    <div class="reservation-button-area-bg" data-stellar-background-ratio="0.6" style="background:rgba(0, 0, 0, 0) url('{{bookTable_bg.url}}') no-repeat scroll center center / cover"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">

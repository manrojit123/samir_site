        border: 0;
        font-size: 15px !important;
        /*letter-spacing: 4px;*/
        opacity: 0.9;
    }

    .navbar li a,
    .navbar .navbar-brand {
        color: #d5d5d5 !important;
        text-transform: uppercase;
    }

